<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omius.omius">

    <!--
        Fix permissions on storage and camera access
        Android Matshmallow Galaxy S6 : manual permission grants
        http://stackoverflow.com/questions/32225506/android-6m-permission-issue-create-directory-not-working
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Main Activity is where all the BT settings are -->
        <!-- android:name=".MainActivity" -->
        <activity
            android:name=".Start"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.omius.omius.RegisterActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.omius.omius.SignInActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.omius.omius.SignUpActivity"
            android:theme="@style/AppTheme.Dark">
        </activity>
    </application>
</manifest>